<div class='w-screen'>
  <div class='container mx-auto w-60'>
    <img src='{{playlist.playlist_img_url}}' />
  </div>
  <h2
    class='text-center text-5xl font-bold text-lime-500'
  >{{playlist.title}}</h2>
</div>
<div class='grid grid-cols-2 grid-rows-1'>

  <div id='playlist-container' class='container flex flex-col gap-2'>
      {{#each playlist.songs as |song|}}
        {{>song-details}}
        
      {{/each}}
    </div>
    <div class='basis-1/4'>
      {{> playlist-chart}}
    </div>
  </div>
</div>