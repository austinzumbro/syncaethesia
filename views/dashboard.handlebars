<style>
  .hover\:shadow-custom:hover { box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.4); }
</style>
<div class='flex flex-col space-y-2 pl-5'>
  <div class='basis-1/8 align-top rounded-full text-lg'>
    <button
      id='import-playlist-button'
      class='hover:shadow-custom transform hover:scale-105 transition-all duration-200 text-slate-900 font-semibold p-2.5 px-4 rounded-full bg-sky-600 hover:bg-sky-300'
    >Import Playlist from Spotify</button>
  </div>
  <div class='basis-1/8 align-top rounded-full text-lg'>
    <button
      id='import-audio-analysis'
      class='hover:shadow-custom transform hover:scale-105 transition-all duration-200 text-slate-900 font-semibold p-2.5 px-4 rounded-full bg-sky-600 hover:bg-sky-300'
    >Import Audio Analysis</button>
  </div>
  {{!-- <div class='basis-1/8 align-top rounded-full text-lg'>
    <button
      class='hover:shadow-custom transform hover:scale-105 transition-all duration-200 text-slate-900 font-semibold p-2.5 px-4 rounded-full bg-sky-600 hover:bg-sky-300'
    >
      <a href='/song-search'>Add a Song</a>
    </button>

  </div> --}}
</div>
<h2
  class='mb-10 text-center text-4xl font-bold text-gray-300'
>{{user.display_name}}'s Recent Playlist</h2>

<div class='flex flex-row space-x-10 justify-center pl-20 pr-20'>
  {{#each playlists as |playlist|}}
    <a
      href='/playlists/{{playlist.id}}'
      class='basis-1/3 p-8 rounded-lg bg-gray-900 hover:shadow-custom transform hover:scale-105 transition-all duration-200'
    >
      <h2
        class='mb-2 px-8 text-4xl text-center font-bold text-sky-200'
      >{{playlist.title}}</h2>
      <div class='flex flex-col space-y-2'>
        {{#each (limit playlist.songs 10) as |song|}}
          <div
            class='flex flex-row justify-between hover:bg-gray-700 rounded-md p-1 ps-2 pe-2'
          >
            <p class='text-lg font-semibold text-sky-400'>{{song.title}}</p>
            <p class='text-base font-light text-sky-500'>{{song.artist}}</p>
          </div>
        {{/each}}
      </div>
    </a>
  {{/each}}
</div>

<script src='/js/dashboard.js'></script>
<script src='../public/js/css/input.css'></script>
<script src='anime.min.js'></script>