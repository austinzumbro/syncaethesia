<h2 class='text-center text-xl font-bold text-lime-500'>Dashboard</h2>
<button id='import-playlist-button'>Import Playlist from Spotify</button>
<div class='flex flex-row'>

  <p>{{user.display_name}}</p>
  {{#each playlists as |playlist|}}
    <div
      class='basis-1/4 box-border h-8 w-8 border-4 bg-indigo-800 hover:bg-indigo-500'
    >
      <a href='/playlist'>
        <h2
          class='text-center text-base font-semibold text-amber-500'
        >{{playlist.title}}</h2>
      </a>
      <div
        class='flex flex-column box-border h-2 w-3 border-4 bg-indigo-600 hover:bg-indigo-300'
      >
        {{#each playlist.songs as |song| }}
          <p
            class='text-center text-sm font-light text-sky-400'
          >{{song.title}}</p>
          <p
            class='text-center text-xs font-light text-sky-500 basis-1/4'
          >{{song.artist}}</p>
        {{/each}}
      </div>
    </div>
  {{/each}}
</div>
<div class='flex flex-row'>
  <a href='/song-search' class=''>Add a Song</a>
</div>

<script src='/js/dashboard.js'></script>
<script src='../public/js/css/input.css'></script>
<script src='anime.min.js'></script>