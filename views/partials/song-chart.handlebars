<script src='https://cdn.jsdelivr.net/npm/chart.js'></script>

<script>
const songData = document.querySelector('#song-data-section').dataset;
console.log(songData);


const chart = new Chart(document.getElementById('SongAnalysis'), {
    type: 'bar',
    data: {
        labels: ['danceability', 'valence', 'speechiness'],
        datasets: [
            {
                xAxisID: 'xAxis1',
                data: [songData.dance, songData.valence, songData.speech],
            },
        ],
    },
    options: {
        backgroundColor: '#32CD32',
        responsive: true
    },
});

const data = {
  labels: [
    'Danceability',
    'Valence (Happiness)',
    'Speechiness',
    'Sentiment',
  ],
  datasets: [{
    label: 'Radar RE:flection',
    data: [songData.dance, songData.valence, songData.speech, songData.sentimentscore],
    fill: true,
    backgroundColor: 'rgba(255, 99, 132, 0.2)',
    borderColor: 'rgb(255, 99, 132)',
    pointBackgroundColor: 'rgb(255, 99, 132)',
    pointBorderColor: '#fff',
    pointHoverBackgroundColor: '#fff',
    pointHoverBorderColor: 'rgb(255, 99, 132)'
  }],
};

const radar = new Chart(document.getElementById('LyricalAnalysis'), {
    type: 'radar',
    data: data,
    options: {
        elements: {
            line: {
                borderWidth: 3
            }
        },
        scales: {
            xAxes: [{
                ticks: {
                    fontColor: '#000'
                }
            }]
        }
    },
});
</script>