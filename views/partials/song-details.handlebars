<a
  href='/songs/{{id}}'
  class='p-8 rounded-lg bg-indigo-800 hover:bg-indigo-500'
>
  <div
    class='flex flex-row w-full justify-between'
    id='song-{{id}}'
    data-tempo='{{tempo}}'
    data-danceabaility='{{danceability}}'
    data-valence='{{valence}}'
    data-speechiness='{{speechiness}}'
    data-sentiment='{{sentiment}}'
  >
    <p class='text-lg font-semibold text-sky-400'>{{title}}</p>
    <p class='text-base font-light text-sy-500'>{{artist}}</p>
  </div>
</a>